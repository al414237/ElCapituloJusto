<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle">

        <!-- Primer lugar -->
        <LinearLayout
            android:id="@+id/player1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@android:color/holo_orange_light"
            android:gravity="center_vertical"
            android:elevation="6dp">

            <TextView
                android:id="@+id/player1_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/player1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jugador 1"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Segundo lugar -->
        <LinearLayout
            android:id="@+id/player2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:elevation="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/player2_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/player2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jugador 2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/player2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Tercer lugar -->
        <LinearLayout
            android:id="@+id/player3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/player3_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/player3_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jugador 3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player3_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Cuarto lugar -->
        <LinearLayout
            android:id="@+id/player4_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/player4_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/player4_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jugador 4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/player4_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
